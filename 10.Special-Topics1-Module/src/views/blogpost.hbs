<html dir="rtl" lang="fa-IR">

  <head>
    <meta charset="utf-8">

    <title>وبلاگ مومن زاده</title>

    <link rel="shortcut icon" href="assets/images/favicon.png">
    <link rel="stylesheet" href="assets/css/lib/all.min.css">
    <link rel="stylesheet" href="assets/css/lib/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/default.css">
    <script src="assets/js/lib/jquery-3.3.1.min.js"></script>
    <script src="assets/js/lib/bootstrap.min.js"></script>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary fixed-top">
      <a class="navbar-brand" href="#">وبلاگ مومن زاده</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link btn btn-danger" href="/signout">خروج</a>
          </li>
        </div>
      </nav>

      <section id="Main" class="py-5">
        <div class="container-fluid">
          <div class="row justify-content-center">
            <div class="col-8 p-3">
              <div class="row">
                <div class="col-12">

                  {{#singlepost}}

                    <div class="PostCard">
                      <div class="PostCardHeader">
                        <div class="PostCardHeaderRight">
                          <p id="PostCardTitle">

                            {{title}}

                          </p>
                        </div>
                        <div class="PostCardHeaderLeft">
                          <ul>
                            <li>
                              <span class="fa fa-user mr-1"></span>
                              <span>
                                {{firstname}}
                                {{lastname}}
                              </span>
                            </li>
                            <li>
                              <span class="fa fa-clock mr-1"></span>
                              <span>
                                {{senddate}}
                              </span>
                            </li>
                          </ul>
                        </div>
                      </div>
                      <div class="PostCardBody">
                        <img src="blogposts/{{this.username}}/{{this.pictureaddress}}" alt="" id="PostCardMainImg">
                        <div id="PostCardContent">
                          {{{body}}}
                        </div>
                      </div>

                      <a href="blogposts/{{this.username}}/{{this.fileaddress}}" class="btn btn-danger">دانلود فایل ضمیمه</a>

                    </div>

                  {{/singlepost}}
                </div>

                <div class="col-12 mt-2">
                  <div class="Comments">
                    <ul class="m-0 p-0">
                      {{#each comments}}
                        <li>
                          <div class="CommentCard">
                            <div class="CommentCardLeft">
                              <ul>
                                <li>
                                  {{this.username}}
                                </li>
                                <li>
                                  <span>&comma;</span>
                                </li>
                                <li>
                                  {{this.senddate}}
                                </li>
                              </ul>
                              <p>
                                {{this.commentText}}
                              </p>
                            </div>
                          </div>
                        </li>
                      {{/each}}

                    </ul>
                  </div>
                </div>

                <div class="col-12 mt-2">
                  <div id="frmComment">
                    <form action="/insertCommentform" method="POST">

                      <input type="hidden" value="{{currentuser}}" name="user_id">

                      {{#singlepost}}
                        <input type="hidden" value="{{this.id}}" name="post_id">
                      {{/singlepost}}
                      <div class="form-group">
                        <label for="commentTxt">نظر شما</label>
                        <textarea name="commentText" id="commentText" cols="30" rows="10" class="form-control rounded-0"></textarea>
                      </div>
                      <input type="submit" value="ارسال">
                    </form>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </section>

      <script src="assets/js/lib/slick.min.js"></script>
      <script src="assets/js/script.js"></script>
      <script src="assets/js/blog-single.js"></script>

    </body>

  </html>
