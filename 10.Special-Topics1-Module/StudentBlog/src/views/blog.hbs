<html dir="rtl" lang="fa-IR">

  <head>

    <meta charset="utf-8">

    <title>وبلاگ مومن زاده</title>

    <link rel="stylesheet" href="assets/css/lib/all.min.css">
    <link rel="stylesheet" href="assets/css/lib/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/default.css">
    <script src="assets/js/lib/jquery-3.3.1.min.js"></script>
    <script src="assets/js/lib/bootstrap.min.js"></script>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary fixed-top">
      <a class="navbar-brand" href="#">وبلاگ مومن زاده</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link btn btn-danger" href="/signout">خروج</a>
          </li>
        </div>
      </nav>

      <section id="Main" class="py-5">
        <div class="container-fluid">
          <div class="row">

            {{#each posts}}

              <div class="col-4">
                <div class="BlogCard">
                  <div class="BlogCardHeader">
                    <img src="blogposts/{{this.username}}/{{this.pictureaddress}}" alt="">
                    <span class="fa fa-clock mr-1"></span>
                    <span>{{this.senddate}}</span>
                    <span class="fa fa-user"></span>
                    <span>{{this.firstname}}
                      {{this.lastname}}</span>
                  </div>
                  <div class="BlogCardBody">
                    <p class="BlogCardTitle">{{this.title}}</p>
                    {{!-- <p class="BlogCardContent">
                    {{{this.body}}}
                  </p>
                  --}}
                </div>
                <div class="BlogCardFooter">
                  <a href="/blogonepost?id={{this.id}}">
                    ادامه
                  </a>
                </div>
              </div>

            </div>
          {{/each}}

        </div>
      </div>
    </section>

    <script src="assets/js/lib/slick.min.js"></script>

  </body>

</html>
